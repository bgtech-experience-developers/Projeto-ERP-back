{
  "openapi": "3.0.0",
  "info": {
    "title": "PROJETO ERP",
    "version": "1.0.0",
    "description": "API FOCADA NO GERECIAMENTO EMPRESARIAL",
    "contact": {
      "email": "lucassilvadpaula@gmail.com",
      "name": "bgtech",
      "url": "https://bgtech.com.br"
    }
  },
  "servers": [
    { "url": "http://localhost:8000", "description": "servidor do projeto erp" }
  ],

  "components": {
    "schemas": {
      "CorpoCLient": {
        "type": "array",
        "items": {
          "properties": {
            "name": {
              "type": "string",
              "default": "beltrano"
            },
            "id": {
              "type": "number",
              "default": 1
            },
            "rg": { "type": "string", "default": "120340250" },
            "date_birth": {
              "type": "string",
              "default": "2005-01-01T02:00:00.000Z"
            },
            "type": {
              "type": "string",
              "default": null
            },
            "cpf": { "type": "string", "default": "619.612.22-22" },
            "situation": {
              "type": "boolean",
              "default": true
            },
            "email": {
              "type": "string",
              "default": "lucassssilvadpaula@gmail.com"
            },
            "telefone": {
              "type": "string",
              "default": "85 98796-2019"
            },
            "celular": {
              "type": "string",
              "default": "85 98796-2019"
            },
            "createdAt": {
              "type": "string",
              "default": "2024-10-15T22:22:27.528Z"
            },
            "updatedAt": {
              "type": "string",
              "default": "2024-10-15T22:22:27.528Z"
            }
          }
        }
      },
      "ClientUnic": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "1", "default": 1 },
          "cpf": {
            "type": "string",
            "description": "521.552.123-33",
            "default": "521.552.123-33"
          },
          "rg": {
            "type": "string",
            "description": "1234023000",
            "default": "1234023000"
          },
          "nome": {
            "type": "string",
            "description": "beltrano",
            "default": "beltrano"
          },
          "email": {
            "type": "string",
            "description": "beltrano@gmail.com",
            "default": "beltrano@gmail.com"
          },
          "date_birth": {
            "type": "string",
            "description": "10/10/2005",
            "default": "10/10/2005"
          },
          "telefone": {
            "type": "string",
            "description": "85 9881-1234",
            "default": "85 9881-1234"
          },
          "celular": {
            "type": "string",
            "description": "85 9881-1234",
            "default": "85 9881-1234"
          },
          "address": {
            "type": "object",
            "properties": {
              "id": { "type": "number", "description": "1", "default": 1 },
              "cidade": {
                "type": "string",
                "description": "fortaleza",
                "default": "fortaleza"
              },
              "numero": {
                "type": "number",
                "description": "148",
                "default": 148
              },
              "complemento": {
                "type": "string",
                "description": "casa",
                "default": "casa"
              },
              "cep": {
                "type": "string",
                "description": "50298-345",
                "default": "50298-345"
              },
              "bairro": {
                "type": "string",
                "description": "montese",
                "default": "montese"
              },
              "logadouro": {
                "type": "string",
                "description": "rua dos patos",
                "default": "rua dos patos"
              }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/clientes/cadastro": {
      "post": {
        "description": "objetivo dessa rota é criar um cliente no banco de dados de acordo suas informações pessoais",

        "summary": "criar um cliente",
        "tags": ["clientes"],

        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "examples": {
                "chaves unicas": {
                  "description": "cpf é uma chave única, ou seja, não terá dois registros da mesma chave registrada no banco de dados, campo situação é recomendável que seja valores booleanos, somente true ou somente false"
                }
              },
              "schema": {
                "title": "adição de um cliente",

                "properties": {
                  "situacao": {
                    "type": "boolean",
                    "description": "aceita somente true or false"
                  },
                  "numero": {
                    "type": "number",
                    "description": "aceita um numero que seja válido até 2bilhões"
                  },
                  "resto dos campos": {
                    "type": "string",
                    "description": "o resto dos campo é tudo string"
                  }
                },
                "type": "object",

                "description": "esses dados são fundamentais para que a inserção de um cliente seja realizada",
                "example": {
                  "cpf": "619.612.223-22",
                  "situacao": false,
                  "name": "fulano",
                  "rg": "120340250",
                  "date_birth": "01/01/2005",
                  "email": "lucassssilvadpaula@gmail.com",
                  "telefone": "85 98796-2019",
                  "celular": "85 98796-2019",
                  "cep": "60831-485",
                  "logradouro": "rua dos patos",
                  "numero": 185,
                  "complemento": "casa",
                  "bairro": "montese",
                  "cidade": "ceará"
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Cadastro realizado com sucesso!" },
          "409": { "description": "Usuário já cadastrado no sistema!" },
          "500": { "description": "erro interno do servidor" }
        }
      }
    },
    "/clientes/deletar-cliente/{cpf}": {
      "delete": {
        "tags": ["clientes"],
        "summary": "deletar um cliente",
        "parameters": [
          {
            "in": "path",
            "name": "cpf",

            "description": "use o cpf do cliente para deleta-lo",

            "required": true,
            "schema": { "example": "123.033.234-33" }
          }
        ],
        "description": "rota dedicada para a remoção de um cliente no banco de dados",
        "responses": {
          "201": { "description": "cliente deletado com sucesso" },
          "404": { "description": "cliente não encontrado" },
          "500": { "description": "erro interno do servidor" }
        }
      }
    },
    "/clientes/cadastrados": {
      "get": {
        "tags": ["clientes"],
        "summary": "buscar todos os clientes registrados",
        "description": "objetivo de mostrar todos os clientes registrados",

        "responses": {
          "200": {
            "description": "busca realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CorpoCLient"
                }
              }
            }
          },
          "500": { "description": "erro interno do servidor" }
        }
      }
    },
    "/clientes/buscar-cliente/{cpf}": {
      "get": {
        "parameters": [
          {
            "required": true,
            "in": "query",
            "name": "include",
            "description": "caso queira trazer alguns dados relacionados a este cliente, coloque true",
            "schema": { "enum": ["true", "false"] }
          },
          {
            "in": "path",
            "name": "cpf",
            "example": "12345678910",
            "required": true,
            "description": "coloque o cpf do cliente que você deseja buscar",

            "schema": {
              "type": "string"
            }
          }
        ],
        "summary": "pegar um cliente especifico",
        "description": "rota dedicada para buscar um cliente e caso queira fazer uma consulta que traga o cruzamento de dados realacionado a esse cliente em especifico também é possível",
        "tags": ["clientes"],
        "responses": {
          "201": {
            "description": "busca realizada com successo do cliente com seus dados relacionados",

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientUnic"
                }
              }
            }
          },
          "404": { "description": "cliente não encontrado!" },
          "500": { "description": "erro interno de servidor" }
        }
      }
    },
    "/clientes/atualizarCliente/{id}": {
      "put": {
        "tags": ["clientes"],
        "summary": "atualizar um cliente",
        "parameters": [
          {
            "required": true,
            "in": "path",
            "description": "o id do usuário é fundamental para que ele seja atualizado",
            "name": "id",
            "schema": { "type": "number", "example": 1 }
          }
        ],
        "description": "rota dedicada para atualizar um cliente em especifico",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "default": "fulano"
                  },
                  "rg": { "type": "string", "default": "103020302" },
                  "date_birth": { "type": "string", "default": "10/10/2005" },
                  "email": {
                    "type": "string",
                    "default": "lucasssilvadpaula@gmail.com"
                  },
                  "situation": { "type": "boolean", "default": true },
                  "telefone": { "type": "string", "default": "2200-2020" },
                  "celular": { "type": "string", "default": "2200-2020" },
                  "cep": { "type": "string", "default": "50212-22" },
                  "logradouro": {
                    "type": "string",
                    "default": "rua dos patos"
                  },
                  "numero": { "type": "number", "default": 124 },
                  "complemento": { "type": "string", "default": "casa" },
                  "bairro": { "type": "string", "default": "montese" },
                  "cidade": { "type": "string", "default": "fortaleza" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "cliente atualizado com sucesso" },
          "404": { "description": "cliente não encontrado" },
          "500": { "description": "erro interno de servidor" }
        }
      }
    }
  }
}
