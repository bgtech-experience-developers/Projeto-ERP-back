generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clientes {
  id        Int      @id @default(autoincrement())
  nome      String
  cpf       String   @unique
  email     String
  senha     String
  telefone  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  situacao  Boolean  @default(false)
}

model Fucionarios {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String
  cpf       String   @unique
  telefone  Int
  celular   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
